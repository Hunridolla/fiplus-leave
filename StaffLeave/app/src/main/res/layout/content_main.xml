<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_main">

    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <ImageView
                android:src="@drawable/slide"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="0.15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.8"
        android:gravity="center|bottom"
        android:orientation="vertical"
        android:paddingBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="1dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:background="@drawable/bordermain"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:padding="5dp"
                        android:id="@+id/local"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.06"
                        android:src="@drawable/fiplus_khmer"/>
                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.1"
                        android:gravity="center|top"
                        android:text="Staff Information"
                        android:textColor="#464646"
                        android:textSize="12dp" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="1dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:background="@drawable/bordermain"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:padding="5dp"
                        android:id="@+id/exchange"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.06"
                        android:src="@drawable/fiplus_khmer" />
                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.1"
                        android:gravity="center|top"
                        android:text="Staff Requests"
                        android:textColor="#464646"
                        android:textSize="12dp" />
                </LinearLayout>
            </LinearLayout>



            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="1dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:background="@drawable/bordermain"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:padding="5dp"
                        android:id="@+id/setting"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.06"
                        android:src="@drawable/fiplus_khmer"/>

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.1"
                        android:gravity="center|top"
                        android:text="Reports"
                        android:textColor="#464646"
                        android:textSize="12dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        
        <LinearLayout
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="1dp">


                <LinearLayout
                    android:orientation="vertical"
                    android:background="@drawable/bordermain"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:padding="5dp"
                        android:id="@+id/rbalance"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.06"
                        android:src="@drawable/fiplus_khmer" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.1"
                        android:gravity="center|top"
                        android:text="Staff Balance"
                        android:textColor="#464646"
                        android:textSize="12dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="1dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:background="@drawable/bordermain"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:padding="5dp"
                        android:id="@+id/news"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.06"
                        android:src="@drawable/fiplus_khmer"/>
                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.1"
                        android:gravity="center|top"
                        android:text="Staff Approve"
                        android:textColor="#464646"
                        android:textSize="12dp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="1dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:background="@drawable/bordermain"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:padding="5dp"
                        android:id="@+id/contactus"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.06"
                        android:src="@drawable/fiplus_khmer" />
                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.1"
                        android:gravity="center|top"
                        android:text="Contacts"
                        android:textColor="#464646"
                        android:textSize="12dp" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <LinearLayout
                android:padding="1dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:orientation="vertical"
                    android:background="@drawable/bordermain"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/tips"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.06"
                        android:padding="5dp"
                        android:src="@drawable/fiplus_khmer" />

                    <TextView
                        android:textSize="12dp"
                        android:gravity="center|top"
                        android:id="@+id/txvtips"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.1"
                        android:text="Barcode"
                        android:textColor="#000000" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:padding="1dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:orientation="vertical"
                    android:background="@drawable/bordermain"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:padding="5dp"
                        android:id="@+id/faq"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.06"
                        android:src="@drawable/fiplus_khmer" />

                    <TextView
                        android:textSize="12dp"
                        android:gravity="center|top"
                        android:layout_weight="0.1"
                        android:id="@+id/txvfaqs"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="About Us"
                        android:textColor="#000000" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:padding="1dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:orientation="vertical"
                    android:background="@drawable/bordermain"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:padding="5dp"
                        android:layout_weight="0.06"
                        android:id="@+id/help"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/fiplus_khmer" />

                    <TextView
                        android:textSize="12dp"
                        android:gravity="center|top"
                        android:layout_weight="0.1"
                        android:id="@+id/txvhelp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Setting"
                        android:textColor="#000000" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>